{
    "name": "@internal/fetch-client",
    "version": "1.0.0",
    "description": "Polyglot HTTP client for Node.js",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src/**/*.ts"
    },
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        }
    },
    "dependencies": {
        "undici": "^6.0.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.0"
    }
}