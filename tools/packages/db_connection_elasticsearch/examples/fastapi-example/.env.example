# Elasticsearch Connection Settings
ELASTIC_DB_HOST=localhost
ELASTIC_DB_PORT=9200
ELASTIC_DB_SCHEME=https

# Authentication (choose one method)
# Option 1: API Key
# ELASTIC_DB_API_KEY=your-api-key-here

# Option 2: Basic Auth
# ELASTIC_DB_USERNAME=elastic
# ELASTIC_DB_PASSWORD=changeme

# SSL/TLS Settings
ELASTIC_DB_VERIFY_CERTS=false
# ELASTIC_DB_CA_CERTS=/path/to/ca.crt

# Cloud (if using Elastic Cloud)
# ELASTIC_DB_CLOUD_ID=deployment-name:base64string
